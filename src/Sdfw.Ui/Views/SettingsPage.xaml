<Page
    x:Class="Sdfw.Ui.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Sdfw.Ui.ViewModels"
    xmlns:loc="clr-namespace:Sdfw.Ui.Localization"
    d:DataContext="{d:DesignInstance vm:SettingsViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnLoaded">

    <ScrollViewer Margin="24">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Text="{loc:Localize Settings_Title}"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button
                        Content="{loc:Localize Settings_RestoreDefaults}"
                        Command="{Binding ResetToDefaultsCommand}"
                        Margin="0,0,8,0" />
                    <ui:Button
                        Content="{loc:Localize Settings_Save}"
                        Appearance="Primary"
                        Icon="{ui:SymbolIcon Save24}"
                        Command="{Binding SaveCommand}" />
                </StackPanel>
            </Grid>

            <!-- Behavior Section -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock
                        Text="{loc:Localize Settings_Behavior}"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0,0,0,16" />

                    <ui:ToggleSwitch
                        Content="{loc:Localize Settings_MinimizeToTray}"
                        IsChecked="{Binding MinimizeToTray}"
                        Margin="0,0,0,8" />

                    <ui:ToggleSwitch
                        Content="{loc:Localize Settings_CloseToTray}"
                        IsChecked="{Binding CloseToTray}"
                        Margin="0,0,0,8" />

                    <ui:ToggleSwitch
                        Content="{loc:Localize Settings_StartWithWindows}"
                        IsChecked="{Binding StartWithWindows}"
                        Margin="0,0,0,8" />

                    <ui:ToggleSwitch
                        Content="{loc:Localize Settings_StartMinimized}"
                        IsChecked="{Binding StartMinimized}"
                        IsEnabled="{Binding StartWithWindows}"
                        Margin="0,0,0,8" />

                    <ui:ToggleSwitch
                        Content="{loc:Localize Settings_CheckForUpdates}"
                        IsChecked="{Binding CheckForUpdates}" />
                </StackPanel>
            </ui:Card>

            <!-- Appearance Section -->
            <ui:Card Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock
                        Text="{loc:Localize Settings_Appearance}"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Margin="0,0,0,16" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="{loc:Localize Settings_Theme}" Margin="0,0,0,8" />
                            <ComboBox
                                ItemsSource="{Binding AvailableThemes}"
                                SelectedItem="{Binding SelectedTheme}" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="{loc:Localize Settings_Language}" Margin="0,0,0,8" />
                            <ComboBox
                                ItemsSource="{Binding AvailableLanguages}"
                                SelectedItem="{Binding SelectedLanguage}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ScrollViewer>
</Page>
