<Page
    x:Class="Sdfw.Ui.Views.ProvidersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Sdfw.Ui.ViewModels"
    xmlns:loc="clr-namespace:Sdfw.Ui.Localization"
    xmlns:converters="clr-namespace:Sdfw.Ui.Converters"
    d:DataContext="{d:DesignInstance vm:ProvidersViewModel}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnLoaded">

    <Page.Resources>
        <converters:BoolToAppearanceConverter x:Key="BoolToAppearanceConverter" />
        <converters:TemporaryActiveToSymbolConverter x:Key="TemporaryActiveToSymbolConverter" />
        <converters:LocalizedTemporaryActiveToConnectTooltipConverter x:Key="LocalizedTemporaryActiveToConnectTooltipConverter" />
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter" />
        <SolidColorBrush x:Key="DefaultProviderBackgroundBrush" Color="#1A4CAF50" />
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="{loc:Localize Providers_Title}"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button
                    Content="{loc:Localize Providers_Add}"
                    Icon="{ui:SymbolIcon Add24}"
                    Command="{Binding AddProviderCommand}"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowReset24}"
                    Command="{Binding ResetProvidersCommand}"
                    ToolTip="{loc:Localize Providers_ResetList}"
                    Margin="0,0,8,0" />
                <ui:Button
                    Icon="{ui:SymbolIcon ArrowSync24}"
                    Command="{Binding RefreshCommand}"
                    ToolTip="{loc:Localize Adapters_Refresh}" />
            </StackPanel>
        </Grid>

        <!-- Providers List -->
        <ui:ListView
            Grid.Row="1"
            ItemsSource="{Binding Providers}"
            SelectedItem="{Binding SelectedProvider}">
            <ui:ListView.ItemContainerStyle>
                <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </ui:ListView.ItemContainerStyle>
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <ui:Card Margin="0">
                        <ui:Card.Style>
                            <Style TargetType="ui:Card" BasedOn="{StaticResource {x:Type ui:Card}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDefault}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DefaultProviderBackgroundBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Card.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Provider Icon -->
                            <ui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Globe24"
                                FontSize="32"
                                Margin="0,0,16,0" />

                            <!-- Provider Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock
                                    Text="{Binding Description}"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    FontSize="12"
                                    Visibility="{Binding Description, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                <!-- DoH URL -->
                                <TextBlock
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    FontSize="11"
                                    Visibility="{Binding DohUrl, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="DoH: " /><Run Text="{Binding DohUrl, Mode=OneWay}" />
                                </TextBlock>
                                <!-- IPv4 Addresses -->
                                <TextBlock
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    FontSize="11"
                                    Visibility="{Binding PrimaryIpv4, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="IPv4: " /><Run Text="{Binding PrimaryIpv4, Mode=OneWay}" /><Run Text="{Binding SecondaryIpv4, Mode=OneWay, StringFormat=' / {0}'}" />
                                </TextBlock>
                                <!-- IPv6 Addresses -->
                                <TextBlock
                                    Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                    FontSize="11"
                                    Visibility="{Binding PrimaryIpv6, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                    <Run Text="IPv6: " /><Run Text="{Binding PrimaryIpv6, Mode=OneWay}" /><Run Text="{Binding SecondaryIpv6, Mode=OneWay, StringFormat=' / {0}'}" />
                                </TextBlock>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <ui:Button
                                    Icon="{Binding IsTemporaryActive, Converter={StaticResource TemporaryActiveToSymbolConverter}}"
                                    ToolTip="{Binding IsTemporaryActive, Converter={StaticResource LocalizedTemporaryActiveToConnectTooltipConverter}}"
                                    Appearance="{Binding IsTemporaryActive, Converter={StaticResource BoolToAppearanceConverter}, ConverterParameter=Success}"
                                    IsEnabled="{Binding IsTemporaryToggleEnabled}"
                                    Command="{Binding DataContext.ConnectTemporaryCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                    CommandParameter="{Binding}"
                                    Margin="0,0,4,0" />
                                <ui:Button
                                    Icon="{ui:SymbolIcon Checkmark24}"
                                    ToolTip="{loc:Localize Providers_SetAsDefault}"
                                    Appearance="{Binding IsDefault, Converter={StaticResource BoolToAppearanceConverter}, ConverterParameter=Success}"
                                    Command="{Binding DataContext.SetAsDefaultCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                    CommandParameter="{Binding}"
                                    Margin="0,0,4,0" />
                                <ui:Button
                                    Icon="{ui:SymbolIcon Edit24}"
                                    ToolTip="{loc:Localize Providers_Edit}"
                                    Command="{Binding DataContext.EditProviderCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                    CommandParameter="{Binding}"
                                    Margin="0,0,4,0" />
                                <ui:Button
                                    Icon="{ui:SymbolIcon Delete24}"
                                    ToolTip="{loc:Localize Providers_Delete}"
                                    Command="{Binding DataContext.DeleteProviderCommand, RelativeSource={RelativeSource AncestorType=ui:ListView}}"
                                    CommandParameter="{Binding}" />
                            </StackPanel>
                        </Grid>
                    </ui:Card>
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <!-- Loading -->
        <ui:ProgressRing
            Grid.RowSpan="2"
            IsIndeterminate="True"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</Page>
