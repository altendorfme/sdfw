<ui:FluentWindow
    x:Class="Sdfw.Ui.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:Sdfw.Ui.ViewModels"
    xmlns:loc="clr-namespace:Sdfw.Ui.Localization"
    Title="{loc:Localize AppTitle}"
    Width="900"
    Height="600"
    MinWidth="700"
    MinHeight="500"
    Icon="/Assets/app.ico"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Closing="OnClosing"
    StateChanged="OnStateChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar
            Grid.Row="0"
            Title="{loc:Localize AppTitle}" />

        <!-- Navigation View -->
        <ui:NavigationView
            Grid.Row="1"
            x:Name="NavigationView"
            PaneDisplayMode="Left"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleVisible="True"
            OpenPaneLength="200">

            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="{loc:Localize Nav_Dashboard}"
                    Icon="{ui:SymbolIcon Home24}"
                    TargetPageType="{x:Type local:DashboardPage}"
                    xmlns:local="clr-namespace:Sdfw.Ui.Views" />

                <ui:NavigationViewItem
                    Content="{loc:Localize Nav_DnsProviders}"
                    Icon="{ui:SymbolIcon Globe24}"
                    TargetPageType="{x:Type local:ProvidersPage}"
                    xmlns:local="clr-namespace:Sdfw.Ui.Views" />

                <ui:NavigationViewItem
                        Content="{loc:Localize Nav_NetworkAdapters}"
                        Icon="{ui:SymbolIcon Router24}"
                        TargetPageType="{x:Type local:AdaptersPage}"
                        xmlns:local="clr-namespace:Sdfw.Ui.Views" />
            </ui:NavigationView.MenuItems>

            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="{loc:Localize Nav_Settings}"
                    Icon="{ui:SymbolIcon Settings24}"
                    TargetPageType="{x:Type local:SettingsPage}"
                    xmlns:local="clr-namespace:Sdfw.Ui.Views" />
            </ui:NavigationView.FooterMenuItems>

            <ui:NavigationView.ContentOverlay>
                <ui:SnackbarPresenter
                    x:Name="SnackbarPresenter"
                    VerticalAlignment="Top" />
            </ui:NavigationView.ContentOverlay>

        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
